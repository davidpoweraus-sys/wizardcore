# Simple Dockerfile for WizardCore - Builds everything from source
# Usage: docker build -t wizardcore:latest -f Dockerfile.simple .

FROM node:18-alpine AS frontend-builder

# Install frontend dependencies
WORKDIR /app
COPY package*.json ./
RUN npm ci

# Build frontend
COPY . .
RUN npm run build

# Create standalone frontend
RUN npm run standalone

FROM golang:1.21-alpine AS backend-builder

# Install backend dependencies
WORKDIR /app
COPY wizardcore-backend/go.mod wizardcore-backend/go.sum ./
RUN go mod download

# Build backend
COPY wizardcore-backend/ .
RUN CGO_ENABLED=0 GOOS=linux go build -o /backend ./cmd/api

# Final image
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache \
    nodejs \
    ca-certificates \
    tzdata \
    && rm -rf /var/cache/apk/*

# Create app directory
WORKDIR /wizardcore

# Copy frontend
COPY --from=frontend-builder /app/standalone ./frontend
COPY --from=frontend-builder /app/public ./frontend/public
COPY --from=frontend-builder /app/.next/static ./frontend/.next/static

# Copy backend
COPY --from=backend-builder /backend ./backend

# Copy configuration files
COPY wizardcore-backend/.env.example .env
COPY simple-docker-compose.yml .

# Create startup script
RUN cat > start.sh << 'EOF'
#!/bin/sh
set -e

echo "ğŸš€ Starting WizardCore..."

# Start backend
./backend &

# Start frontend
cd frontend
node server.js &

# Wait for both services
wait
EOF

RUN chmod +x start.sh

# Expose ports
EXPOSE 3000 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000 || exit 1

# Start services
CMD ["./start.sh"]